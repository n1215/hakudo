{
    "name": "n1215/hakudo",
    "description": "A PSR-7/PSR-15 flexible HTTP router.",
    "keywords": [
        "psr-15",
        "psr-7",
        "router"
    ],
    "type": "library",
    "homepage": "https://github.com/n1215/hakudo",
    "license": "MIT",
    "authors": [
        {
            "name": "n1215",
            "email": "knakae1215@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.1.0",
        "n1215/http-router": "~0.2.0",
        "n1215/http-request-matcher": "~0.1.0",
        "n1215/jugoya": "~0.5.0"
    },
    "autoload": {
        "psr-4": {
            "N1215\\Hakudo\\": "src"
        }
    },
    "require-dev": {
        "zendframework/zend-diactoros": "^1.4",
        "mockery/mockery": "^0.9.9",
        "phpunit/phpunit": "^6.5"
    },
    "autoload-dev": {
        "psr-4": {
            "N1215\\Hakudo\\": "tests"
        }
    },
    "scripts": {
        "test": [
            "vendor/bin/phpunit"
        ],
        "coverage": [
            "rm -rf ./build",
            "mkdir ./build",
            "php -dzend_extension=xdebug.so ./vendor/bin/phpunit --coverage-text --coverage-html=build/coverage --coverage-clover=build/coverage.clover"
        ]
    }
}
